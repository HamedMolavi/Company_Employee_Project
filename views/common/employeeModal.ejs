<div id="employeeModal" tabindex="-1"
    class="Modal overflow-auto position-absolute left-0 align-items-center d-flex justify-content-center col-12"
    style="min-height: 100%; z-index: 200;">
    <div class="p-4 rounded-3 col-11 col-lg-8 bg-glass-light" style="height: fit-content;">
        <div class="fs-5 text-center text-md-start text-primary">
            <p class="headmodal col-md-7 mx-auto mx-md-0 ms-md-5">
                <span id="employeemodalTitle">Edit Employee</span>
            </p>
        </div>
        <div class="container mt-2">
            <div class="row justify-content-center justify-content-md-start ps-md-5 align-items-center">
                <div class="col-9 col-sm-5 col-md-2  position-relative p-0" style="height: fit-content;">
                    <label for="employeeAvatarEdit" class="form-label col-12 h-100 user-select-none"
                        style="cursor: pointer;">
                        <img id="employeeAvatarFile" src="/Images/icons/companies/logo.png" alt="" class="col-12 h-100">
                    </label>
                    <input class="form-control d-none " type="file" id="employeeAvatarEdit" name="employeeAvatarEdit">
                </div>
                <div class="p-0 col-12 col-md-10 ps-md-3 d-flex flex-wrap justify-content-between align-items-center">

                    <div class="col-6 mt-1">
                        <div class="input-group">
                            <input id="employeeFirstnameEdit" type="text"
                                class="text-dark form-control bg-transparent placeholder-black" placeholder="Firstname"
                                aria-label="Firstname">
                            <span class="input-group-text text-dark">,</span>
                            <input id="employeeLastnameEdit" type="text"
                                class="text-dark form-control bg-transparent placeholder-black" placeholder="Lastname"
                                aria-label="Lastname">
                        </div>
                    </div>

                    <div class="col-6 mt-1">
                        <div class="input-group col-5">
                            <span class="input-group-text text-dark" id="basic-addon1">@</span>
                            <input id="employeeCompanynameEdit" type="text"
                                class="text-dark form-control bg-transparent placeholder-primary" placeholder="Company"
                                aria-label="Company" aria-describedby="basic-addon1">
                        </div>
                    </div>

                    <div class="d-flex flex-column justify-content-between fs-7">
                        <div class="form-check d-flex align-items-end p-0">
                            <input class="" type="radio" name="role" id="employeeCheck">
                            <label class="form-check-label text-dark" for="employee">
                                Employee
                            </label>
                        </div>
                        <div class="form-check d-flex align-items-end p-0">
                            <input class="" type="radio" name="role" id="managerCheck">
                            <label class="form-check-label text-dark" for="manager">
                                Manager
                            </label>
                        </div>
                    </div>


                    <div class="controls d-flex justify-content-between col-6 fs-3">
                        <label for="maleCheck">
                            <input id="maleCheck" type="radio" name="gender" />
                            <i class="fa fa-male text-dark"></i>
                        </label>
                        <label for="femaleCheck">
                            <i class="fa fa-female m-0 text-dark"></i>
                            <input id="femaleCheck" type="radio" name="gender" />
                        </label>
                    </div>


                </div>

            </div>

            <div class="row justify-content-center justify-content-md-between ps-md-5 align-items-center">

                <div class="col-5 mt-2 p-0">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-birthday-cake text-dark"></i></span>
                        <input id="employeeBirthdayEdit" type="date"
                            class="text-dark form-control bg-transparent placeholder-black" placeholder="Birthday"
                            aria-label="Birthday" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="col-5 mt-2 p-0">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-id-card text-dark"></i></span>
                        <input id="employeeNationalIDEdit" type="text"
                            class="text-dark form-control bg-transparent placeholder-black" placeholder="National ID"
                            aria-label="National ID" aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>


            <div class="row justify-content-center justify-content-md-between ps-md-5 mt-2 align-items-center">
                <div class="p-0">
                    <label for="employeeAboutEdit" class="form-label text-dark">About</label>
                    <textarea class="form-control bg-transparent text-dark" id="employeeAboutEdit" rows="3"></textarea>
                </div>
            </div>
            <div class="row justify-content-center justify-content-md-end pt-3 ">
                <div class="d-flex col-12 col-md-7 justify-content-center justify-content-md-end pt-3 gap-3"
                    style="border-top: 1px solid black;">
                    <button id="submitEmployeeBtn" type="button" class="btn btn-success col-md-3"
                        onclick="">Submit</button>
                    <button id="closeModal" type="button" class="btn btn-danger col-md-3">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>